ddl
create table a(a, b); create table b(a, b);
----

query
select a.a from a order by a.a
----
----
digraph G {
    compound = true
    labeljust = l
    label="select a.a from a order by a.a
"
    node [ shape = box ]
    subgraph cluster0 {
        label = "Box0:Select"
        boxhead0 [ shape = record, label="{ 0: Q0.c0 AS A| ORDER Q0.c0 Ascending }" ]
        {
            rank = same
            node [ shape = circle ]
            Q0 [ label="Q0(F)" ]
        }
    }
    subgraph cluster1 {
        label = "Box1:BaseTable A"
        boxhead1 [ shape = record, label="{ 0: c0 AS A|1: c1 AS B }" ]
        {
            rank = same
        }
    }
    edge [ arrowhead = none, style = dashed ]
    Q0 -> boxhead1 [ lhead = cluster1 ]
}


ddl
create table a(a, b, c); create table b(a, b, d);
----

query
select * from a inner join b using (a);
----
----
digraph G {
    compound = true
    labeljust = l
    label="select * from a inner join b using (a);
"
    node [ shape = box ]
    subgraph cluster0 {
        label = "Box0:Select"
        boxhead0 [ shape = record, label="{ 0: Q2.c0 AS A|1: Q2.c1 AS B|2: Q2.c2 AS C|3: Q2.c3 AS B|4: Q2.c4 AS D }" ]
        {
            rank = same
            node [ shape = circle ]
            Q2 [ label="Q2(F)" ]
        }
    }
    subgraph cluster1 {
        label = "Box1:Select"
        boxhead1 [ shape = record, label="{ 0: Q0.c0 AS A|1: Q0.c1 AS B|2: Q0.c2 AS C|3: Q1.c1 AS B|4: Q1.c2 AS D }" ]
        {
            rank = same
            node [ shape = circle ]
            Q0 [ label="Q0(F)" ]
            Q1 [ label="Q1(F)" ]
            edge [ arrowhead = none, style = solid ]
            Q0 -> Q1 [ label="(Q0.c0) = (Q1.c0)" ]
        }
    }
    subgraph cluster3 {
        label = "Box3:BaseTable B"
        boxhead3 [ shape = record, label="{ 0: c0 AS A|1: c1 AS B|2: c2 AS D }" ]
        {
            rank = same
        }
    }
    subgraph cluster2 {
        label = "Box2:BaseTable A"
        boxhead2 [ shape = record, label="{ 0: c0 AS A|1: c1 AS B|2: c2 AS C }" ]
        {
            rank = same
        }
    }
    edge [ arrowhead = none, style = dashed ]
    Q2 -> boxhead1 [ lhead = cluster1 ]
    Q0 -> boxhead2 [ lhead = cluster2 ]
    Q1 -> boxhead3 [ lhead = cluster3 ]
}

